<!--Handlebars for login page-->
<h2 id="loginText">Login</h2>

<form class="form login-form" id="inputForm">
  <div class="form-group">
    <label for="user-login">UserName:</label>
    <input class="form-input" type="text" id="user-login" />
  </div>
  <div class="form-group">
    <label for="password-login">Password:</label>
    <input class="form-input" type="password" id="password-login" />
  </div>
  <div class="form-group">
    <button class="btn btn-primary" id="sign-up-btn" type="button">Sign Up</button>
    <button class="btn btn-primary" id="login-btn" type="submit">Login</button>
  </div>
</form>

<script src="/js/login.js"></script>